@model GerenciadorDespesas.Models.TipoDespesa

@{
    ViewData["Title"] = "Atualizar " + Model.Nome;
}

<h4>Atualizar Tipo de Despesa: @Model.Nome</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="form border-rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TipoDespesaId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-sm btn-outline-success" />
                <a asp-action="Index" class="btn btn-sm btn-outline-dark">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

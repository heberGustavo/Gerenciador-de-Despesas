@model IEnumerable<GerenciadorDespesas.Models.Salario>

@{
    ViewData["Title"] = "Salários Cadastrados";
}

<div class="container">

    <h3>Salários Cadastrados</h3>

    <p>
        <a asp-action="Create" class="btn btn-sm btn-outline-primary">Novo Salário</a>
    </p>

    @if (TempData["Confirmacao"] != null)
    {
        <h6 class="alert alert-success">
            @TempData["Confirmacao"]
        </h6>
    }

    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Meses)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Meses.Nome)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.SalarioId" class="btn btn-sm btn-outline-info">Atualizar</a> |
                        <a onclick="ExibirModal(@item.SalarioId)" class="btn btn-sm btn-outline-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Excluir</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Deseja prosseguir com a excluão do salário?.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary btnExcluir">Sim</button>
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Não</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        function ExibirModal(id) {
            $(".modal").modal();

            $(".btnExcluir").on('click', function () {
                $.ajax({
                    url: "Salarios/Delete",
                    method: "POST",
                    data: { id: id },
                    success: function (data) {
                        $(".modal").modal('hide');
                        location.reload(true);
                    }
                });
            });
        }
    </script>
}
@model GerenciadorDespesas.Models.Despesa

@{
    ViewData["Title"] = "Nova Despesa";
}

<h4>Nova Despesa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MesId" class="control-label">Mês</label>
                <select asp-for="MesId" class="form-control" asp-items="ViewBag.MesId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipoDespesaId" class="control-label">Tipo da Despesa</label>
                <div class="input-group">
                    <select asp-for="TipoDespesaId" class="form-control" asp-items="ViewBag.TipoDespesaId"></select>
                    <div class="input-group-append">
                        <button type="button" class="btn btn-outline-info" data-toggle="tooltip" data-placement="right" title="Adicionar novo tipo de despesa" onclick="MostrarModal()">
                             <i class="far fa-plus-square"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label">Valor</label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-sm btn-outline-success" /> &nbsp;
                <a asp-action="Index" class="btn btn-sm btn-outline-dark">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Adicionar nova despesa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input class="form-control txtDespesa"/>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary btnAdicionar">Adicionar</button>
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        //Habilitar Tooltip
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });

        function MostrarModal() {
            $('.modal').modal();

            $('.btnAdicionar').on('click', function () {
                var txtDespesa = $('.txtDespesa').val();

                $.ajax({
                    url: "/TipoDespesas/AdicionarTipoDespesa",
                    method: "POST",
                    data: { txtDespesa: txtDespesa },
                    success: function (data) {
                        //Se a despesa ja esta cadastrada
                        if (!data) {
                            $('.modal').modal('hide');
                            $('.modal').modal('dispose');
                            $('.btnAdicionar').unbind('click');
                            $('.txtDespesa').val('');
                            alert("Tipo de Despesa já cadastrado!");
                        }
                        else {
                            location.reload(true);
                        }
                    }
                });
            });
        }
    </script>
}
